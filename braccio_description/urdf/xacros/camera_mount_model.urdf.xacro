<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="camera_mount" params="parent">
        <link name="mount"> 
            <inertial>
                <origin rpy="1.57 0 0.78" xyz="0 0.0 0" />
                <mass value="2" />
                <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.00666666666667" iyz="0" izz="0.0216666666667"/>
            </inertial>
            <visual>
                <geometry>
                    <mesh filename="package://braccio_description/stl/camera_mount.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="white"/>
                <origin rpy="1.57 0 0.78" xyz="0 0.0 0" />
            </visual>

            <collision>
                <geometry>
                    <mesh filename="package://braccio_description/stl/camera_mount.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin rpy="1.57 0 0.78" xyz="0 0.0 0" />
            </collision>
        </link>


        <joint name="mount_joint" type="continuous" >
            <parent link="${parent}" />
            <child link="mount" />
            <axis xyz="0 0 -1" />
        </joint> 
    </xacro:macro>

</robot>